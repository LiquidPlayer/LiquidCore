<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.liquidplayer.nodeconsole.ScrollingActivity"
    android:id="@+id/scroll"
    tools:showIn="@layout/activity_scrolling">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:fontFamily="monospace" android:textSize="12sp"
        android:layout_margin="@dimen/text_margin" android:id="@+id/console_text" />

</android.support.v4.widget.NestedScrollView>
